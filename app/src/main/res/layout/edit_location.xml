<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appBlue"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:id="@+id/titleBarEditLocation"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Location"
            android:textSize="30sp"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finish_location_text"
            android:textColor="#ffffffff"
            android:layout_alignParentRight="true"
            android:textSize="17sp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:onClick="finishLocation"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBarEditLocation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentEditLocation"
            android:orientation="vertical"
            android:paddingBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location Name"
                style="@style/ContentHeader"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/appOrange"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/appBlue"
                android:textSize="20sp"
                android:id="@+id/locationNameEditLocation"
                android:inputType="textMultiLine|textCapSentences|textAutoComplete|textAutoCorrect"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/addressView"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    style="@style/ContentHeader"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/appOrange"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/appBlue"
                    android:textSize="20sp"
                    android:id="@+id/locationAddressEditLocation"
                    android:inputType="textMultiLine|textCapSentences|textAutoComplete|textPostalAddress|textAutoCorrect"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/mapView"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:id="@+id/mapHeaderTextEditLocation"
                        style="@style/ContentHeader"/>

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/refresh_icon"
                        android:onClick="refreshMap"
                        android:background="#00000000"
                        android:layout_toRightOf="@id/mapHeaderTextEditLocation" />

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/current_location"
                        android:background="#00000000"
                        android:paddingRight="10dp"
                        android:onClick="useCurrentLocation"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/appOrange"/>

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:id="@+id/mapFragment"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ContentHeader"
                    android:text="Notes"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#ff1bc300"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:textSize="30sp"
                    android:paddingRight="15dp"
                    android:onClick="addNote"
                    android:id="@+id/noteAddButton"/>

                </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/appOrange"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/note1Layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note1"
                    android:id="@+id/note1EditLocation"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/appBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="45sp"
                    android:onClick="deleteNote"
                    android:id="@+id/deleteNote1Button"
                    android:paddingRight="20dp"
                    android:textColor="#ffed0005"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/note2Layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note2"
                    android:id="@+id/note2EditLocation"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/appBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="45sp"
                    android:onClick="deleteNote"
                    android:id="@+id/deleteNote2Button"
                    android:paddingRight="20dp"
                    android:textColor="#ffed0005"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/note3Layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note3"
                    android:id="@+id/note3EditLocation"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/appBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="45sp"
                    android:onClick="deleteNote"
                    android:id="@+id/deleteNote3Button"
                    android:paddingRight="20dp"
                    android:textColor="#ffed0005"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/note4Layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note4"
                    android:id="@+id/note4EditLocation"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/appBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="45sp"
                    android:onClick="deleteNote"
                    android:id="@+id/deleteNote4Button"
                    android:paddingRight="20dp"
                    android:textColor="#ffed0005"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/note5Layout"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note5"
                    android:id="@+id/note5EditLocation"
                    android:textSize="20sp"
                    android:paddingTop="15dp"
                    android:textColor="@color/appBlue"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="45sp"
                    android:onClick="deleteNote"
                    android:id="@+id/deleteNote5Button"
                    android:paddingRight="20dp"
                    android:textColor="#ffed0005"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>